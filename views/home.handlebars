<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1>Discuss Today</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}} {{#each article}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>{{this.title}}</h4>
            </div>
            <div class="panel-body">
                <p> {{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
            </div>
            <div>
                <button type="button" class="btn btn-success addComment" data-toggle="modal" data-target="#commentModal{{this._id}}" data-id={{this._id}}>Add a Comment</button>
            </div>

        </div>
        {{/each}} {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <div>ERROR</div>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--Clicked Notes Modal-->
{{#each article}} {{> comments-modal }} {{/each}}